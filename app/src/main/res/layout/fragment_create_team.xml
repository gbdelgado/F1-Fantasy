<?xml version="1.0" encoding="utf-8"?>
<!--fragment_create_team.xml controls the static layout of the create team fragment as well as defines
the methods that should be called in the case of an event-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTeamFragment">

    <TextView
        android:id="@+id/header_home2"
        style="@style/H1"
        android:text="Create/Modify Team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_slot_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:onClick="handleAddPlayerClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_home2"
        app:srcCompat="@drawable/blank_helmet" />

    <ToggleButton
        android:id="@+id/turbo_slot_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        android:enabled="false"
        android:onClick="handleTurboChange"
        android:textOff="TD"
        android:textOn="TD ðŸ”¥"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/player_slot_1"
        app:layout_constraintStart_toStartOf="@+id/player_slot_1"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_1" />

    <TextView
        android:id="@+id/player_slot_1_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/turbo_slot_1"
        app:layout_constraintStart_toStartOf="@+id/turbo_slot_1"
        app:layout_constraintTop_toBottomOf="@+id/turbo_slot_1"
        android:text="@string/add_driver" />


    <ImageView
        android:id="@+id/player_slot_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:onClick="handleAddPlayerClick"
        app:layout_constraintEnd_toStartOf="@+id/player_slot_3"
        app:layout_constraintStart_toEndOf="@+id/player_slot_1"
        app:layout_constraintTop_toBottomOf="@id/header_home2"
        app:srcCompat="@drawable/blank_helmet" />

    <ToggleButton
        android:id="@+id/turbo_slot_2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        android:enabled="false"
        android:onClick="handleTurboChange"
        android:textOff="TD"
        android:textOn="TD ðŸ”¥"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/player_slot_2"
        app:layout_constraintStart_toStartOf="@+id/player_slot_2"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_2" />

    <TextView
        android:id="@+id/player_slot_2_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/turbo_slot_2"
        app:layout_constraintStart_toStartOf="@+id/turbo_slot_2"
        app:layout_constraintTop_toBottomOf="@+id/turbo_slot_2"
        android:text="@string/add_driver" />

    <ImageView
        android:id="@+id/player_slot_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:onClick="handleAddPlayerClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_home2"
        app:srcCompat="@drawable/blank_helmet" />

    <ToggleButton
        android:id="@+id/turbo_slot_3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        android:enabled="false"
        android:onClick="handleTurboChange"
        android:textOff="TD"
        android:textOn="TD ðŸ”¥"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/player_slot_3"
        app:layout_constraintStart_toStartOf="@+id/player_slot_3"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_3" />

    <TextView
        android:id="@+id/player_slot_3_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/turbo_slot_3"
        app:layout_constraintStart_toStartOf="@+id/turbo_slot_3"
        app:layout_constraintTop_toBottomOf="@+id/turbo_slot_3"
        android:text="@string/add_driver" />

    <ImageView
        android:id="@+id/player_slot_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:onClick="handleAddPlayerClick"
        app:layout_constraintEnd_toStartOf="@+id/player_slot_5_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_2_text"
        app:srcCompat="@drawable/blank_helmet" />

    <ToggleButton
        android:id="@+id/turbo_slot_4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        android:enabled="false"
        android:onClick="handleTurboChange"
        android:textOff="TD"
        android:textOn="TD ðŸ”¥"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/player_slot_4"
        app:layout_constraintStart_toStartOf="@+id/player_slot_4"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_4" />

    <TextView
        android:id="@+id/player_slot_4_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/turbo_slot_4"
        app:layout_constraintStart_toStartOf="@+id/turbo_slot_4"
        app:layout_constraintTop_toBottomOf="@+id/turbo_slot_4"
        android:text="@string/add_driver" />


    <ImageView
        android:id="@+id/player_slot_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:onClick="handleAddPlayerClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_2_text"
        app:srcCompat="@drawable/blank_helmet" />

    <ToggleButton
        android:id="@+id/turbo_slot_5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        android:enabled="false"
        android:onClick="handleTurboChange"
        android:textOff="TD"
        android:textOn="TD ðŸ”¥"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/player_slot_5"
        app:layout_constraintStart_toStartOf="@+id/player_slot_5"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_5" />

    <TextView
        android:id="@+id/player_slot_5_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/turbo_slot_5"
        app:layout_constraintStart_toStartOf="@+id/turbo_slot_5"
        app:layout_constraintTop_toBottomOf="@+id/turbo_slot_5"
        android:text="@string/add_driver" />

    <TextView
        android:id="@+id/constructor_slot_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constructor_slot"
        android:text="@string/add_constructor" />


    <ImageView
        android:id="@+id/constructor_slot"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:onClick="handleAddPlayerClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_slot_5"
        app:srcCompat="@drawable/blank_f1_car" />



    <Button
        android:id="@+id/button_continue"
        style="@style/Button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:onClick="handleModifyTeamClick"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reset_button"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constructor_slot" />

    <Button
        android:id="@+id/reset_button"
        style="@style/Button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="Reset"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="20dp"
        android:onClick="handleReset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_continue"
        app:layout_constraintTop_toBottomOf="@id/constructor_slot" />

    <TextView
        android:id="@+id/subs_left_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/remaining_cash_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_continue"
        />

    <TextView
        android:id="@+id/remaining_cash_text"
        style="@style/Row_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/subs_left_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

