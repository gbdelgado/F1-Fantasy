<!--        style="@style/Row_Text" />-->

    <TextView
        android:id="@+id/row_league_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/Row_Text"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

</LinearLayout>