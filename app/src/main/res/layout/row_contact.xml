<?xml version="1.0" encoding="utf-8"?>
<!--row_contact.xml controls the static layout of the contact row for the contact adapter as well as defines
the methods that should be called in the case of an event-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contact_row_text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="onContactClick"
        android:padding="20dp"
        android:textSize="30sp"
        style="@style/Row_Text"/>

</LinearLayout>