<?xml version="1.0" encoding="utf-8"?>
<!--fragment_leaderboard.xml controls the static layout of the leaderboards page as well as defines
the methods that should be called in the case of an event-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardFragment"
    style="@style/Frame_Layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_leaderboard"
            style="@style/H1"
            android:text="Leaderboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/image_alt_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/alt_share"
            android:layout_margin="10dp"
            android:onClick="onClickHandler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ListView
            android:id="@+id/listview_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="67dp"
            style="@style/Frame_Layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>