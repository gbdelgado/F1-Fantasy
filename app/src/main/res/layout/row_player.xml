<?xml version="1.0" encoding="utf-8"?>
<!--row_player.xml controls the static layout of the player adapter as well as defines
the methods that should be called in the case of an event-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_player_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            style="@style/Row_Text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/row_player_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/Row_Text" />

        <TextView
            android:id="@+id/row_player_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/Row_Text" />

    </LinearLayout>

</LinearLayout>